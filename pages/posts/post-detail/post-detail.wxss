/* post-detail.wxss */

.container{
  display: flex;
  flex-direction: column;
}

.headimg{
   width: 100%;
   height: 460rpx;
}

.author-date{
  margin-top: 20rpx;
  margin-left: 30rpx;
  flex-direction: row;
}

.avatar{
  width: 64rpx;
  height:64rpx;
  vertical-align: middle;
}

.author{
   font-size: 30rpx;
   font-weight: 300;
   margin-left: 20rpx;
   vertical-align: middle;
   color:#666;
}

.const-text{
  font-size: 24rpx;
  color:#999;
  margin-left: 20rpx;
  vertical-align: middle;
}

.date{
  font-size: 24rpx;
  color:#999;
  margin-left: 30rpx;
  vertical-align: middle;
}

.title{
  font-size: 36rpx;
  margin-left: 40rpx;
  font-weight: 700;
  margin-top:30rpx;
  letter-spacing: 2px;
  color:#4b556c;
}

.tool{
  margin-top: 20rpx;
}

.circle-img{
  float:right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img image{
     width:64rpx;
     height:64rpx;
}
.share-img{
  margin-left: 30rpx;
}

.horizon{
  width:660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:32rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  color:#666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  font-size: 30rpx;
}